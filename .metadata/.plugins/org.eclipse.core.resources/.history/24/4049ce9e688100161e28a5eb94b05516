		JTree jTree = new JTree(first);
		//设置为单选
		jTree.getSelectionModel().setSelectionMode(TreeSelectionModel.SINGLE_TREE_SELECTION);
		//监听
		jTree.addTreeSelectionListener(this);
		JScrollPane j = new JScrollPane(jTree);
		//富文本区域
		esit = new JEditorPane();
