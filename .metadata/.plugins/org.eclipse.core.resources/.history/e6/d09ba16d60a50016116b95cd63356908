	public Lookfriendfase(QQidtable idtable) {
		super("QQ注册");
		this.idtable=idtable;
		tubiao();
		bg = new JLabel(new ImageIcon("head/8.jpg"));
		bg.setLayout(null);
		add(bg);
		head = new JButton(new ImageIcon(idtable.getQQhead()));
