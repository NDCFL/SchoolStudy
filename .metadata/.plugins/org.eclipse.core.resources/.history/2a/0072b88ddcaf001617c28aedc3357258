package T2;

public class Wanshu {

	public static void main(String[] args) {
		int i, j, a, b, c;
		System.out.println("1000以内的完数如下：\n");
		for (i = 6; i <= 1000; i++) {
			a = 0;
			for (j = 2; j <= i; j++) {
				if (i % j == 0) {

					a += i / j;
				}
			}
			if (i == a) {
				for (j = 2; j <= i; j++) {
					if (i % j == 0) {
						if (i == j) {
							System.out.print("+" + i / j);
						} else {
							System.out.print("+" + i / j);
						}
					}
				}
				System.out.println("=" + i);
			}
		}
	}
}
