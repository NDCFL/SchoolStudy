package TagDemo;

import javax.servlet.jsp.JspException;
import javax.servlet.jsp.JspWriter;
import javax.servlet.jsp.tagext.TagSupport;

public class LoginTagDemo extends TagSupport{

	
	@Override
	public int doEndTag() throws JspException {
		JspWriter out = pageContext.getOut();
		try {
			out.write("<form name='form1' action='T10doc/checklogin.jsp' method='post'>");
			out.write("<div style='width:'150px';height='40px''><input type='text' name='username'></div>");
			out.print("密码：");
			out.write("<div style='width:'150px';height='40px''><input type='text' name='userpassword'></div>");
			out.write("</form>");
		} catch (Exception e) {
			System.out.println("登录Tag出错！");
		}
		return super.doEndTag();
	}
	@Override
	public int doStartTag() throws JspException {
		// TODO Auto-generated method stub
		return super.doStartTag();
	}
}
